<odoo>
  <data>

    <!-- Acción Devs: abre res.partner, sólo desarrolladores -->
    <record model="ir.actions.act_window" id="accion_manageyubo_developer_form">
      <field name="name">Devs</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">res.partner</field>
      <field name="view_mode">tree,form</field>
      <!-- Sólo ver is_dev = True -->
      <field name="domain">[('is_dev', '=', True)]</field>
      <!-- Al crear desde aquí, marcar is_dev por defecto -->
      <field name="context">{'default_is_dev': True}</field>
    </record>

    <!-- Form heredado: añadir pestaña Devs -->
    <record model="ir.ui.view" id="manageyubo_devs_partner_form">
      <field name="name">manageyubo devs form</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="base.view_partner_form"/>
      <field name="mode">primary</field>
      <field name="arch" type="xml">
        <xpath expr="//sheet/notebook/page[@name='internal_notes']" position="after">
          <page name="devs" string="Devs">
            <group>
                <field name="is_dev"/>
                <field name="technologies"/>
            </group>
          </page>
        </xpath>
      </field>
    </record>

    <!--  tree vista（usamos la tree base de res.partner） -->
    <record model="ir.actions.act_window.view" id="accion_manageyubo_developer_tree_view">
      <field name="sequence" eval="1"/>
      <field name="view_mode">tree</field>
      <field name="view_id" ref="base.view_partner_tree"/>
      <field name="act_window_id" ref="accion_manageyubo_developer_form"/>
    </record>

    <!--  nuestra form heredada -->
    <record model="ir.actions.act_window.view" id="accion_manageyubo_developer_form_view">
      <field name="sequence" eval="2"/>
      <field name="view_mode">form</field>
      <field name="view_id" ref="manageyubo_devs_partner_form"/>
      <field name="act_window_id" ref="accion_manageyubo_developer_form"/>
    </record>

    <!-- Me Devs bajo tu menú Management -->
    <menuitem id="menu_manageyubo_developer"
              name="Devs"
              parent="menu_manageyubo_management"
              action="accion_manageyubo_developer_form"/>

  </data>
</odoo>