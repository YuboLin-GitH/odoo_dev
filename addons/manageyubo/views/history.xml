<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="vista_manageyubo_history_tree">
      <field name="name">vista_manageyubo_history_tree</field>
      <field name="model">manageyubo.history</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="description"/>
        </tree>
      </field>
    </record>



    <record model="ir.ui.view" id="vista_manageyubo_history_form">
      <field name="name">vista_manageyubo_history_form</field>
      <field name="model">manageyubo.history</field>
      <field name="arch" type="xml">
        <form string="formulario_history">
          <sheet>
            <group name="group_top">
                <field name="name"/>
                <field name="description"/>
                <field name="project_id"/>
                <field name="task_id"/>
                <field name="used_technologies"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    


<record model="ir.actions.act_window" id="accion_manageyubo_history_form">
      <field name="name">Listado de Historia</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">manageyubo.history</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          Historia
        </p>
        <p> Click <strong> 'Crear' </strong> para a√±adir nuevos elementos
         </p>
      </field>
</record>







    <!-- actions -->

    <menuitem name="History" id="menu_manageyubo_history" parent="menu_manageyubo_management"
              action="accion_manageyubo_history_form"/>
   

  </data>
</odoo>
