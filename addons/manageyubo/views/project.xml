<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="vista_manageyubo_project_tree">
      <field name="name">vista_manageyubo_project_tree</field>
      <field name="model">manageyubo.project</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="description"/>
        </tree>
      </field>
    </record>



    <record model="ir.ui.view" id="vista_manageyubo_project_form">
      <field name="name">vista_manageyubo_project_form</field>
      <field name="model">manageyubo.project</field>
      <field name="arch" type="xml">
        <form string="formulario_project">
          <sheet>
            <group name="group_top">
                <field name="name"/>
                <field name="description"/>
                <field name="history_id"/>
                <field name="sprint_id"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    


<record model="ir.actions.act_window" id="accion_manageyubo_project_form">
      <field name="name">Listado de Proyecto</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">manageyubo.project</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          Proyecto
        </p>
        <p> Click <strong> 'Crear' </strong> para a√±adir nuevos elementos
         </p>
      </field>
</record>



    <!-- actions -->

    <menuitem name="Project" id="menu_manageyubo_project" parent="menu_manageyubo_management"
              action="accion_manageyubo_project_form"/>
   

  </data>
</odoo>
