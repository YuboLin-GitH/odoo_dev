<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="vista_filmotecayubo_genero_tree">
      <field name="name">vista_filmotecayubo_genero_tree</field>
      <field name="model">filmotecayubo.genero</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="description"/>
          <field name="esIntriga"/>
          <field name="esInfantil"/>
        </tree>
      </field>
    </record>



    <record model="ir.ui.view" id="vista_filmotecayubo_genero_form">
      <field name="name">vista_filmotecayubo_genero_form</field>
      <field name="model">filmotecayubo.genero</field>
      <field name="arch" type="xml">
        <form string="formulario_genero">
          <sheet>
            <group name="group_top">
              <field name="name"/>
              <field name="description"/>
              <field name="esIntriga"/>
              <field name="esInfantil"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>


