    <!-- Top menu item -->

    <menuitem name="Filmoteca de la yubo" id="menu_filmotecayubo_raiz"/>

    <!-- menu categories -->

    <menuitem name="Listado de películas" id="menu_filmotecayubo_listado_pelicula" parent="menu_filmotecayubo_raiz"/>

    <!-- actions -->

    <menuitem name="Consultar" id="menu_filmotecayubo_peliculas" parent="menu_filmotecayubo_listado_pelicula"
              action="accion_filmotecayubo_pelicula_form"/>

  </data>
</odoo>
