<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="vista_filmotecayubo_pelicula_tree">
      <field name="name">vista_filmotecayubo_pelicula_tree</field>
      <field name="model">filmotecayubo.pelicula</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="film_date"/>
          <field name="description"/>
          <field name="is_spanish"/>
          <field name="imagen"/>
          <field name="lenguage"/>
          <field name="opinion"/>
          <field name="color"/>
        </tree>
      </field>
    </record>



    <record model="ir.ui.view" id="vista_filmotecayubo_pelicula_form">
      <field name="name">vista_filmotecayubo_pelicula_form</field>
      <field name="model">filmotecayubo.pelicula</field>
      <field name="arch" type="xml">
        <form string="formulario_pelicula">
          <sheet>
            <group name="group_top">
              <group name="group_left">
                <field name="name"/>
                <field name="description"/>
                <field name="film_date"/>
                <field name="is_spanish"/>
              </group>
              <group name="group_right">
                  <field name="imagen"/>
                 <field name="lenguage"/>
                 <field name="opinion"/>
                 <field name="color"/>
              </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>


